<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_notes">

    <fragment
        android:id="@+id/navigation_notes"
        android:name="com.ksu_cem.vigyan.ui.notes.NotesFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_dashboard"
            app:destination="@id/navigation_qstnp" />
    </fragment>

    <fragment
        android:id="@+id/navigation_qstnp"
        android:name="com.ksu_cem.vigyan.ui.qstnp.QstnpFragment"
        android:label="Question Papers"
        tools:layout="@layout/fragment_qstnp" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_notifications"
            app:destination="@id/navigation_lecvid" />
    </fragment>

    <fragment
        android:id="@+id/navigation_lecvid"
        android:name="com.ksu_cem.vigyan.ui.lecvid.LecVidFragment"
        android:label="Lecture Videos"
        tools:layout="@layout/fragment_lecvid" />
</navigation>
